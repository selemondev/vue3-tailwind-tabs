{
  "name": "vue3-tailwind-tabs",
  "private": false,
  "version": "0.0.7",
  "description": "A collection of Vue 3 components for creating tabs with Tailwind CSS.",
  "author": "Selemon Brahanu",
  "keywords": [
    "vue",
    "tailwindcss",
    "typescript",
    "tabs",
    "components"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/selemondev/vue3-tailwind-tabs"
  },
  "bugs": {
    "url": "https://github.com/selemondev/vue3-tailwind-tabs"
  },
  "main": "./dist/vue3-tailwind-tabs.umd.js",
  "module": "./dist/vue3-tailwind-tabs.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue3-tailwind-tabs.es.js",
      "require": "./dist/vue3-tailwind-tabs.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "types": "./dist/components/build.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && pnpm run build:style",
    "build:style": "tailwindcss -i ./src/assets/css/tailwind.css -o ./dist/style.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "tailwind-scrollbar-hide": "^1.1.7",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@iconify/vue": "^4.1.1",
    "@types/node": "^18.15.11",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.1",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.2.0",
    "vue-tsc": "^1.2.0"
  }
}
